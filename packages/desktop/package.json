{
  "name": "easykey-desktop",
  "version": "1.0.0",
  "description": "Secure password generator for desktop platforms",
  "author": {
    "name": "EasyKey Team",
    "email": "contact@easykey.example.com"
  },
  "license": "MIT",
  "main": "build/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && node copy-build-files.js",
    "electron:start": "cross-env NODE_ENV=development concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "cross-env NODE_ENV=production yarn build && cross-env NODE_ENV=production electron-builder",
    "electron:package": "cross-env NODE_ENV=production electron-builder --dir",
    "electron:make": "cross-env NODE_ENV=production electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@easykey/shared": "1.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "21.3.0",
    "electron-builder": "^23.6.0",
    "node": "^23.11.0",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "productName": "EasyKey",
    "appId": "com.easykey.app",
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "extraMetadata": {
      "main": "build/electron.js"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "packageCategory": "utils",
      "executableName": "EasyKey",
      "artifactName": "${productName}-${version}.${ext}",
      "synopsis": "Secure password generator",
      "desktop": {
        "Name": "EasyKey",
        "GenericName": "Password Generator",
        "Comment": "Generate secure passwords"
      }
    }
  }
}
